{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "dragula": [
        "node_modules/@kensingtontech/dragula/dist/dragula.min.js"
      ],
      "socket.io-client": [
        "node_modules/socket.io-client/dist/socket.io.slim.js"
      ],
      "types/*": [
        "src/app/types/*"
      ],
      "services/*": [
        "src/app/services/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false,
    "enableIvy": false
  }
}